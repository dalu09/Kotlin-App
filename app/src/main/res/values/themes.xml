<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Colores primarios y secundarios -->
        <item name="colorPrimary">@color/acento</item>
        <item name="colorPrimaryVariant">@color/acento</item>
        <item name="colorOnPrimary">@color/principal</item>
        <item name="colorSecondary">@color/acento_2</item>
        <item name="colorSecondaryVariant">@color/acento_2</item>
        <item name="colorOnSecondary">@color/principal</item>

        <!-- Colores de fondo y superficies -->
        <item name="android:colorBackground">@color/principal</item>
        <item name="colorSurface">@color/principal</item>

        <!-- Colores de texto -->
        <item name="colorOnBackground">@color/texto</item>
        <item name="colorOnSurface">@color/texto</item>
        <item name="android:textColorSecondary">@color/gris</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceHeadline5">@style/MyTextAppearance.Headline5</item>
        <item name="textAppearanceBody1">@style/MyTextAppearance.Body1</item>
        <item name="textAppearanceBody2">@style/MyTextAppearance.Body2</item>
        <item name="textAppearanceHeadline6">@style/MyTextAppearance.Headline6</item>

    </style>


    <style name="MyTextAppearance.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="MyTextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyTextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyTextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Tema para la Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.KotlinApp</item>
    </style>

</resources>
