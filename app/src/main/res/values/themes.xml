<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Colores primarios y secundarios -->
        <item name="colorPrimary">@color/acento</item>
        <item name="colorPrimaryVariant">@color/acento</item>
        <item name="colorOnPrimary">@color/principal</item>
        <item name="colorSecondary">@color/acento_2</item>
        <item name="colorSecondaryVariant">@color/acento_2</item>
        <item name="colorOnSecondary">@color/principal</item>

        <!-- Colores de fondo y superficies -->
        <item name="android:colorBackground">@color/principal</item>
        <item name="colorSurface">@color/principal</item>

        <!-- Colores de texto -->
        <item name="colorOnBackground">@color/texto</item>
        <item name="colorOnSurface">@color/texto</item>
        <item name="android:textColorSecondary">@color/gris</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>

    